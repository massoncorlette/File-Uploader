<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header.ejs') %>
<body>
  <div id="signupContainer">
    <h1>Sign Up</h1>
    <% if (locals.errors) {%>
      <ul>
        <% errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>
    <form action="/sign-up" method="POST">
      <form action="/sign-up" method="POST">
        <div class="formRows">
          <input id="fname" name="fname" placeholder="First Name" type="text" />
        </div>
      
        <div class="formRows">
          <input id="lname" name="lname" placeholder="Last Name" type="text" />
        </div>
      
        <div class="formRows">
          <input id="email" name="email" placeholder="Email" type="email" />
        </div>
      
        <div class="formRows">
          <input id="password" name="password" placeholder="Password" type="password" />
        </div>
      
        <div class="formRows">
          <input id="passwordconfirm" name="passwordconfirm"  placeholder="Confirm Password"  type="password" />
        </div>
      
        <div id="submitSignup">
          <button type="submit">Sign Up</button>
        </div>
      </form>
    </form>
    <div>
      Have an account? 
      <a href="/">
        Login
      </a>
    </div>
  </div>
</body>
</html>